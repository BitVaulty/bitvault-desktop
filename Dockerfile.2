FROM --platform=linux/arm64 ubuntu:22.04 AS builder  # Use a recent Ubuntu version

RUN apt-get update && apt-get install -y software-properties-common
RUN add-apt-repository universe
RUN apt-get update && apt-get install -y \
    libglib2.0-dev \
    libgirepository1.0-dev \
    build-essential \
    pkg-config \
    libgdk-pixbuf2.0-dev \
    libgtk-3-dev \
    libsoup2.4-dev \
    libsoup3-dev \
    libwebkit2gtk-4.0-dev \ # Or libwebkit2gtk-3.0-dev if needed
    && rm -rf /var/lib/apt/lists/* /var/cache/apt/*

ENV PKG_CONFIG_PATH /usr/lib/aarch64-linux-gnu/pkgconfig:/usr/share/pkgconfig

WORKDIR /app
COPY . .

RUN curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y
ENV PATH="/root/.cargo/bin:${PATH}"
RUN rustup target add aarch64-unknown-linux-gnu
RUN cargo install --git https://github.com/tauri-apps/tauri-cli.git tauri --locked

RUN cargo tauri build --target aarch64-unknown-linux-gnu

FROM ubuntu:latest

COPY --from=builder /app/target/aarch64-unknown-linux-gnu/release/your_tauri_app /app/your_tauri_app

CMD ["/app/your_tauri_app"]